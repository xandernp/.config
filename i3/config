mode "resize" {

        bindsym j resize grow width 2 px or 2 ppt
        bindsym k resize shrink width 2 px or 2 ppt
        bindsym l resize grow height 2 px or 2 ppt
        bindsym semicolon resize shrink height 2 px or 2 ppt

        bindsym Left resize grow width 2 px or 2 ppt
        bindsym Down resize shrink height 2 px or 2 ppt
        bindsym Up resize grow height 2 px or 2 ppt
        bindsym Right resize shrink width 2 px or 2 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

